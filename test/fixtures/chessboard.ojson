# position of the entity on the board
{ 
    "@cmd": "register", 
    "uri":"/component/position", 
    "properties":{
        "file":{ "type": "string" },
        "rank":{ "type": "integer" },
    }
}

# the colour of the entity, only white or black - or maybe a third colour?
{
    "@cmd": "register",
    "uri": "/component/colour",
    "properties":{
        # enum [ "white", "black" ]
        "colour":{ "type": "string" }
    }
}

# Traditionally of course a piece can only be of one 
# type - in which case having a single 'type' component would
# make sense. But since we are experimenting, lets let pieces
# have the ability to have multiple capabilities

{ "@cmd": "register", "uri": "/component/piece/king" }
{ "@cmd": "register", "uri": "/component/piece/queen" }
{ "@cmd": "register", "uri": "/component/piece/rook" }
{ "@cmd": "register", "uri": "/component/piece/bishop" }
{ "@cmd": "register", "uri": "/component/piece/knight" }
{ "@cmd": "register", "uri": "/component/piece/pawn" }

# the appearance component determines how the entity should appear
{ 
    "@cmd": "register", "uri": "/component/appearance", 
    "properties":{
        # enum [ "king", "queen", "rook", "bishop", "knight", "pawn" ]
        "type": "string",
    } 
}

